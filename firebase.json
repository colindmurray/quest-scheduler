{
  "hosting": {
    "predeploy": ["npm --prefix web run build"],
    "public": "web/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "extensions": {
    "firestore-send-email": "firebase/firestore-send-email@0.2.4"
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
